{
  "manifest_version": 3,
  "name": "Triage Hub",
  "version": "0.2.0",
  "description": "ADHD-friendly tab management and reminder system that replaces your New Tab Page",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "history"
  ],
  "chrome_url_overrides": {
    "newtab": "triage_hub.html"
  },
  "action": {
    "default_title": "Triage Hub"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}