{
  "manifest_version": 3,
  "name": "Tab Napper",
  "version": "0.7.0",
  "description": "ADHD-friendly tab management with stash & schedule, markdown editor, and intelligent notifications",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "history",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "triage_hub.html"
  },
  "action": {
    "default_title": "Tab Napper"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}